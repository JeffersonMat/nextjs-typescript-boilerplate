{
  "name": "nextjs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate using Next.js and Typescript.",
  "main": "index.js",
  "scripts": {
    "predev": "tsc",
    "prebuild": "tsc",
    "prestart": "npm run build",
    "preprd": "npm run build",
    "dev": "concurrently \"tsc --watch\" \"node ./dist/server\"",
    "build": "next build ./dist",
    "start": "cross-env NODE_ENV=production node ./dist/server",
    "prd": "cross-env NODE_ENV=production pm2 start ./dist/server --name='app-name'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangist/nextjs-typescript-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zhangist/nextjs-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/zhangist/nextjs-typescript-boilerplate#readme",
  "dependencies": {
    "express": "^4.16.2",
    "koa": "^2.4.1",
    "koa-router": "^7.3.0",
    "next": "^4.2.1",
    "next-routes": "^1.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/koa": "^2.0.43",
    "@types/koa-router": "^7.0.27",
    "@types/next": "^2.4.7",
    "@types/node": "^8.5.7",
    "@types/react": "^16.0.34",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
